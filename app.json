{
  "expo": {
    "name": "MinCultura Check",
    "slug": "mincultura-asistencia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ios/AppIcon~ios-marketing.png",
    "scheme": "minculturaasistencia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon-light.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B4D8C"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "gov.mincultura.asistencia",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para el reconocimiento facial en eventos del Ministerio de Cultura.",
        "NSLocationWhenInUseUsageDescription": "Esta aplicación necesita acceso a tu ubicación para verificar que estés en el evento del Ministerio de Cultura.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Permitir que la app use tu ubicación para verificar asistencia en eventos.",
        "NSLocationAlwaysUsageDescription": "Permitir que la app use tu ubicación para verificar asistencia en eventos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android/play_store_512.png",
        "backgroundColor": "#1B4D8C"
      },
      "package": "gov.mincultura.asistencia",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "new-project-id-here"
      }
    },
    "owner": "mincultura"
  }
}